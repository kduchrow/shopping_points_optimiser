# Environment variables für Shopping Points Optimiser
# Kopiere diese Datei nach .env und passe die Werte an

# Flask Environment
FLASK_ENV=production

# WICHTIG: Generiere einen sicheren Secret Key!
# Linux/Mac: python -c "import secrets; print(secrets.token_hex(32))"
# Windows: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=change-this-to-a-secure-random-key-32-characters-long

# Database (Standard ist SQLite)
DATABASE_URL=sqlite:////app/instance/shopping_points.db

# Debug Mode (IMMER False in Production!)
DEBUG=False

# Optional: Admin Credentials (für initialen Setup)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change-this-password

# Optional: Email/Notification Settings
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# Optional: Scraper Settings
SCRAPER_TIMEOUT=30
SCRAPER_RETRIES=3
